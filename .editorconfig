root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,txt,css,html,php,sass,pug}]
indent_style = tab
indent_size = 2

[*.{json,md,yaml,yml,sql}]
indent_style = space
indent_size = 2

[*.diff]
trim_trailing_whitespace = false
